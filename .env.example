# Database (Railway will auto-configure DATABASE_URL for PostgreSQL)
DATABASE_URL=sqlite:///data/positions_history.db

# Authentication
# Generate a random secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App Password (simple auth)
APP_PASSWORD=your-secure-password-here

# Polymarket Trading Credentials (Required for copy trading and order placement)
POLYMARKET_PRIVATE_KEY=your-private-key-here
POLYMARKET_WALLET_ADDRESS=your-wallet-address-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Cron job settings
FETCH_INTERVAL_MINUTES=5
